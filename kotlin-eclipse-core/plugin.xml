<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="org.jetbrains.kotlin.core.scriptTemplateProvider" name="Kotlin Script Template Provider" schema="schema/org.jetbrains.kotlin.core.scriptTemplateProvider.exsd"/>
   <extension-point id="org.jetbrains.kotlin.core.scriptTemplateProviderEx" name="Kotlin Script Template Provider" schema="schema/org.jetbrains.kotlin.core.scriptTemplateProviderEx.exsd"/>
   <extension
         id="org.jetbrains.kotlin.core.kotlinNature"
         name="KotlinNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.jetbrains.kotlin.core.model.KotlinNature">
         </run>
      </runtime>
   </extension>
   <extension point="org.eclipse.team.core.fileTypes">
      <fileTypes extension="kt" type="text"/>
   </extension>
   <extension
         point="org.eclipse.core.filesystem.filesystems">
      <filesystem
            scheme="org.jetbrains.kotlin.core.filesystem">
         <run
               class="org.jetbrains.kotlin.core.filesystem.KotlinFileSystem">
         </run>
      </filesystem>
   </extension>
   <extension
         point="org.eclipse.jdt.core.classpathContainerInitializer">
      <classpathContainerInitializer
            class="org.jetbrains.kotlin.core.KotlinClasspathContainerInitializer"
            id="org.jetbrains.kotlin.core.KOTLIN_CONTAINER">
      </classpathContainerInitializer>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.jetbrains.kotlin.core.hasNature">
         <adapt
               type="org.eclipse.core.resources.IProject">
            <test
                  property="org.eclipse.core.resources.projectNature"
                  value="org.jetbrains.kotlin.core.kotlinNature">
            </test>
         </adapt>
      </definition>
   </extension>
</plugin>
