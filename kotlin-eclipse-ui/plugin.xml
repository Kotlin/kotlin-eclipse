<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.jetbrains.kotlin.eclipse"
            name="Kotlin">
      </category>
      <wizard
            category="org.jetbrains.kotlin.eclipse"
            class="org.jetbrains.kotlin.wizard.NewUnitWizard"
            finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
            hasPages="true"
            icon="icons/kotlin-file.gif"
            id="org.jetbrains.kotlin.wizard"
            name="Kotlin File"
            preferredPerspectives="org.eclipse.jdt.ui.JavaPerspective"
            project="false">
           <description>
              Create a new Kotlin file
           </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <newWizardShortcut
               id="org.jetbrains.kotlin.wizard">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.jetbrains.kotlin.preferences.KotlinPreferencePage"
            id="kotlin-eclipse-ui.preferences"
            name="Kotlin">
      </page>
      <page
            category="kotlin-eclipse-ui.preferences"
            class="org.jetbrains.kotlin.preferences.EditorPreferencePage"
            id="kotlin-eclipse-ui.preferences.editor"
            name="Editor">
      </page>
      <page
            category="kotlin-eclipse-ui.preferences"
            class="org.jetbrains.kotlin.preferences.CompilerPreferencePage"
            id="kotlin-eclipse-ui.preferences.compiler"
            name="Compiler">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.jetbrains.kotlin.ui.editors.KotlinEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            extensions="kt"
            icon="icons/kotlin-file.gif"
            id="org.jetbrains.kotlin.ui.editors.KotlinEditor"
            name="Kotlin Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.jetbrains.kotlin.psi.visualization.PsiVisualization"
            id="org.jetbrains.kotlin.psi.visualization"
            name="Psi Visualization">
      </command>
      <command
            defaultHandler="org.jetbrains.kotlin.ui.formatter.KotlinCodeFormatter"
            id="org.jetbrains.kotlin.ui.editor.format"
            name="Format Kotlin">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.jetbrains.kotlin.ui.editors.KotlinEditor.EditorContext">
         <command
               commandId="org.jetbrains.kotlin.psi.visualization"
               label="View Psi Structure of current file"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.jetbrains.kotlin.ui.editors.KotlinEditor.EditorContext">
         <command
               commandId="org.jetbrains.kotlin.ui.editor.format"
               label="Format Source Code"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         id="org.jetbrains.kotlin.ui.marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.marker">
      </super>
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationType="org.jetbrains.kotlin.ui.annotation.error"
            colorPreferenceKey="org.jetbrains.kotlin.ui.annotation.error.color"
            colorPreferenceValue="255,0,128"
            highlightPreferenceKey="org.jetbrains.kotlin.ui.annotation.error.highlight"
            label="Kotlin Compilation Error"
            overviewRulerPreferenceKey="org.jetbrains.kotlin.ui.annotation.error.overview"
            overviewRulerPreferenceValue="true"
            symbolicIcon="error"
            textPreferenceKey="org.jetbrains.kotlin.ui.annotation.error.text"
            textPreferenceValue="true"
            textStylePreferenceKey="org.jetbrains.kotlin.ui.annotation.error.textstyle"
            textStylePreferenceValue="PROBLEM_UNDERLINE"
            verticalRulerPreferenceKey="org.jetbrains.kotlin.ui.annotation.error.ruler"
            verticalRulerPreferenceValue="true">
      </specification>
      <specification
            annotationType="org.jetbrains.kotlin.ui.annotation.warning"
            colorPreferenceKey="org.jetbrains.kotlin.ui.annotation.warning.color"
            colorPreferenceValue="244,200,45"
            highlightPreferenceKey="org.jetbrains.kotlin.ui.annotation.warning.highlight"
            label="Kotlin Compilation Warning"
            overviewRulerPreferenceKey="org.jetbrains.kotlin.ui.annotation.warning.overview"
            overviewRulerPreferenceValue="true"
            symbolicIcon="warning"
            textPreferenceKey="org.jetbrains.kotlin.ui.annotation.warning.text"
            textPreferenceValue="true"
            textStylePreferenceKey="org.jetbrains.kotlin.ui.annotation.warning.textstyle"
            textStylePreferenceValue="PROBLEM_UNDERLINE"
            verticalRulerPreferenceKey="org.jetbrains.kotlin.ui.annotation.warning.ruler"
            verticalRulerPreferenceValue="true">
      </specification>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerSeverity="1"
            markerType="org.jetbrains.kotlin.ui.marker"
            name="org.jetbrains.kotlin.ui.annotation.error"
            super="org.eclipse.ui.workbench.texteditor.error">
      </type>
      <type
            markerSeverity="2"
            markerType="org.jetbrains.kotlin.ui.marker"
            name="org.jetbrains.kotlin.ui.annotation.warning"
            super="org.eclipse.ui.workbench.texteditor.warning">
      </type>
   </extension>
</plugin>
