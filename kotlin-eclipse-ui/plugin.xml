<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.jetbrains.kotlin.eclipse"
            name="Kotlin">
      </category>
      <wizard
            category="org.jetbrains.kotlin.eclipse"
            class="org.jetbrains.kotlin.wizard.NewUnitWizard"
            finalPerspective="org.eclipse.jdt.ui.JavaPerspective"
            hasPages="true"
            icon="icons/kotlin-file.gif"
            id="org.jetbrains.kotlin.wizard"
            name="Kotlin File"
            preferredPerspectives="org.eclipse.jdt.ui.JavaPerspective"
            project="false">
           <description>
              Create a new Kotlin file
           </description>
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.jdt.ui.JavaPerspective">
         <newWizardShortcut
               id="org.jetbrains.kotlin.wizard">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="org.jetbrains.kotlin.preferences.KotlinPreferencePage"
            id="kotlin-eclipse-ui.preferences"
            name="Kotlin">
      </page>
      <page
            category="kotlin-eclipse-ui.preferences"
            class="org.jetbrains.kotlin.preferences.EditorPreferencePage"
            id="kotlin-eclipse-ui.preferences.editor"
            name="Editor">
      </page>
      <page
            category="kotlin-eclipse-ui.preferences"
            class="org.jetbrains.kotlin.preferences.CompilerPreferencePage"
            id="kotlin-eclipse-ui.preferences.compiler"
            name="Compiler">
      </page>
      <page
            category="kotlin-eclipse-ui.preferences"
            class="org.jetbrains.kotlin.preferences.KotlinTemplatePreferencePage"
            id="org.jetbrains.kotlin.ui.preferences.templates"
            name="Template">
      </page>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="org.jetbrains.kotlin.ui.editors.KotlinEditor"
            contributorClass="org.eclipse.jdt.internal.ui.javaeditor.CompilationUnitEditorActionContributor"
            extensions="kt"
            icon="icons/kotlin-file.gif"
            id="org.jetbrains.kotlin.ui.editors.KotlinEditor"
            name="Kotlin Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.jetbrains.kotlin.psi.visualization.PsiVisualization"
            id="org.jetbrains.kotlin.psi.visualization"
            name="Psi Visualization">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.jetbrains.kotlin.ui.editors.KotlinEditor.EditorContext">
         <command
               commandId="org.jetbrains.kotlin.psi.visualization"
               label="View Psi Structure of current file"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         id="org.jetbrains.kotlin.ui.marker"
         point="org.eclipse.core.resources.markers">
      <super
            type="org.eclipse.core.resources.marker">
      </super>
      <super
            type="org.eclipse.core.resources.textmarker">
      </super>
      <persistent
            value="true">
      </persistent>
   </extension>
   <extension
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationImageProvider="org.jetbrains.kotlin.ui.editors.KotlinAnnotationImageProvider"
            annotationType="org.jetbrains.kotlin.ui.annotation.error"
            colorPreferenceKey="org.jetbrains.kotlin.ui.annotation.error.color"
            colorPreferenceValue="255,0,128"
            highlightPreferenceKey="org.jetbrains.kotlin.ui.annotation.error.highlight"
            label="Kotlin Compilation Error"
            overviewRulerPreferenceKey="org.jetbrains.kotlin.ui.annotation.error.overview"
            overviewRulerPreferenceValue="true"
            symbolicIcon="error"
            textPreferenceKey="org.jetbrains.kotlin.ui.annotation.error.text"
            textPreferenceValue="true"
            textStylePreferenceKey="org.jetbrains.kotlin.ui.annotation.error.textstyle"
            textStylePreferenceValue="PROBLEM_UNDERLINE"
            verticalRulerPreferenceKey="org.jetbrains.kotlin.ui.annotation.error.ruler"
            verticalRulerPreferenceValue="true">
      </specification>
      <specification
            annotationImageProvider="org.jetbrains.kotlin.ui.editors.KotlinAnnotationImageProvider"
            annotationType="org.jetbrains.kotlin.ui.annotation.warning"
            colorPreferenceKey="org.jetbrains.kotlin.ui.annotation.warning.color"
            colorPreferenceValue="244,200,45"
            highlightPreferenceKey="org.jetbrains.kotlin.ui.annotation.warning.highlight"
            label="Kotlin Compilation Warning"
            overviewRulerPreferenceKey="org.jetbrains.kotlin.ui.annotation.warning.overview"
            overviewRulerPreferenceValue="true"
            symbolicIcon="warning"
            textPreferenceKey="org.jetbrains.kotlin.ui.annotation.warning.text"
            textPreferenceValue="true"
            textStylePreferenceKey="org.jetbrains.kotlin.ui.annotation.warning.textstyle"
            textStylePreferenceValue="PROBLEM_UNDERLINE"
            verticalRulerPreferenceKey="org.jetbrains.kotlin.ui.annotation.warning.ruler"
            verticalRulerPreferenceValue="true">
      </specification>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerSeverity="1"
            markerType="org.jetbrains.kotlin.ui.marker"
            name="org.jetbrains.kotlin.ui.annotation.error"
            super="org.eclipse.ui.workbench.texteditor.error">
      </type>
      <type
            markerSeverity="2"
            markerType="org.jetbrains.kotlin.ui.marker"
            name="org.jetbrains.kotlin.ui.annotation.warning"
            super="org.eclipse.ui.workbench.texteditor.warning">
      </type>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="org.jetbrains.kotlin.core.launch.launchConfigurationType"
            icon="icons/kotlin-file.gif"
            id="org.jetbrains.kotlin.ui.launch.launchConfigurationTypeImageRun">
      </launchConfigurationTypeImage>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="org.jetbrains.kotlin.ui.launch.LaunchConfigurationTabGroup"
            id="org.jetbrains.kotlin.ui.launch.launchConfigurationTabGroup"
            type="org.jetbrains.kotlin.core.launch.launchConfigurationType">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchShortcuts">
      <shortcut
            class="org.jetbrains.kotlin.ui.launch.KotlinLaunchShortcut"
            icon="icons/kotlin-file.gif"
            id="org.jetbrains.kotlin.ui.launch.launchShortcut"
            label="Kotlin Application"
            modes="run">
         <contextualLaunch>
            <enablement>
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
               </with>
            </enablement>
         </contextualLaunch>
      </shortcut>
   </extension>
   <extension
         point="org.eclipse.debug.core.statusHandlers">
      <statusHandler
            class="org.jetbrains.kotlin.ui.launch.CompilerStatusHandler"
            code="1"
            id="org.jetbrains.kotlin.ui.statusHandler"
            plugin="org.jetbrains.kotlin.core">
      </statusHandler>
   </extension>
   <extension
         id="org.jetbrains.kotlin.ui.kotlinBuilder"
         name="KotlinBuilder"
         point="org.eclipse.core.resources.builders">
      <builder>
         <run
               class="org.jetbrains.kotlin.ui.builder.KotlinBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="org.jetbrains.kotlin.ui.kotlinnature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.jetbrains.kotlin.model.KotlinNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.ide.markerResolution">
      <markerResolutionGenerator
            class="org.jetbrains.kotlin.ui.editors.quickfix.KotlinAutoImportMarkerResolutionGenerator"
            markerType="org.eclipse.core.resources.problemmarker">
      </markerResolutionGenerator>
   </extension>
   <extension
         point="org.eclipse.ui.editors.templates">
      <include
            file="templates/default-templates.xml"
            translations="templates/default-templates.xml">
      </include>
      <contextType
            class="org.jetbrains.kotlin.ui.editors.templates.KotlinTemplateContextType"
            id="kotlin-top-level-declarations"
            name="Kotlin Top Level Declarations"
            registryId="org.jetbrains.kotlin.ui.editors.KotlinEditor">
      </contextType>
      <contextTypeRegistry
            id="org.jetbrains.kotlin.ui.editors.KotlinEditor">
      </contextTypeRegistry>
   </extension>
</plugin>
